@model esii.Models.JurosCompostosViewModel

@{
    ViewData["Title"] = "Simulador de Juros Compostos";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Simular" method="post" class="mt-4">
    <div class="form-group mb-3">
        <label>Capital Inicial (€)</label>
        <input asp-for="CapitalInicial" class="form-control" />
        <span asp-validation-for="CapitalInicial" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Taxa de Juro Anual (%)</label>
        <input asp-for="TaxaJuros" class="form-control" />
        <span asp-validation-for="TaxaJuros" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label>Duração (anos)</label>
        <input asp-for="Periodos" class="form-control" />
        <span asp-validation-for="Periodos" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Calcular</button>
</form>

@if (ViewBag.MontanteFinal != null)
{
    <div class="alert alert-success mt-4">
        <strong>Montante Final:</strong> @ViewBag.MontanteFinal € após @Model.Periodos anos
    </div>
}