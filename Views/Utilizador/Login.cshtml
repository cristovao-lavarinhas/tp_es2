@model esii.Models.loginviewmodel

@{
    ViewData["Title"] = "Entrar";
}

<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #bbdefb);
        min-height: 100vh;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .login-card {
        background-color: white;
        padding: 2.5rem;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        max-width: 400px;
        width: 100%;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-primary {
        background-color: #3a8fd5;
        border: none;
    }

    .btn-primary:hover {
        background-color: #327ec0;
    }
</style>

<div class="login-container">
    <div class="login-card">
        <div class="text-center mb-4">
            <h3 class="text-primary"><i class="bi bi-box-arrow-in-right"></i> Iniciar Sessão</h3>
            <p class="text-muted">Acede à tua conta para gerir os teus ativos</p>
        </div>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="nome@exemplo.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label">Palavra-passe</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="bi bi-box-arrow-in-right"></i> Entrar
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <small>Ainda não tens conta? <a href="/Utilizador/Create">Criar conta</a></small>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


