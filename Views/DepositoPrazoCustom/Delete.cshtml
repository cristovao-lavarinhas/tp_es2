@model esii.Models.DepositoPrazoCreateViewModel
@{
    ViewData["Title"] = "Eliminar Depósito";
}

<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #bbdefb);
        font-family: 'Segoe UI', sans-serif;
    }

    .delete-container {
        background-color: #fff;
        padding: 2rem 3rem;
        border-radius: 16px;
        max-width: 700px;
        margin: 3rem auto;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .delete-title {
        color: #d32f2f;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        text-align: left;
    }

    dl dt {
        font-weight: 600;
        color: #333;
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }

    dl dd {
        font-size: 1.1rem;
        margin-bottom: 0.8rem;
        color: #444;
    }

    .btn-group {
        display: flex;
        justify-content: flex-start;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
    }
</style>

<div class="delete-container">
    <h2 class="delete-title">@ViewData["Title"]</h2>
    <dl class="row">
        <dt class="col-sm-4">Banco</dt>
        <dd class="col-sm-8">@Model.Banco</dd>
        <dt class="col-sm-4">Número de Conta</dt>
        <dd class="col-sm-8">@Model.NumConta</dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.AtivoId" method="post" onsubmit="return confirm('⚠ Esta ação é irreversível. Tens a certeza?');">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="AtivoId" />
        <div class="btn-group">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Eliminar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>