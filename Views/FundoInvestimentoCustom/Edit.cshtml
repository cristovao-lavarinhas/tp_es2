@* Views/FundoInvestimentoCustom/Edit.cshtml *@
@model esii.Models.FundoInvestimentoCreateViewModel
@{
    ViewData["Title"] = "Editar Fundo de Investimento";
}

<div class="container">
    <div class="form-container">
        <h2 class="page-title">@ViewData["Title"]</h2>
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="AtivoId" />
            @Html.Partial("_Form")
            <div class="form-buttons">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Gravar
                </button>
                <a class="btn btn-secondary" href="@Url.Action("Index")">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>


