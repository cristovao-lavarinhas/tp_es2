@model List<esii.Entities.TaxaJuroMensal>
@{
    ViewData["Title"] = "Taxas de Juro Mensais";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <a class="btn btn-primary mb-3" asp-action="Create">Nova Taxa</a>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Mês</th>
            <th>Ano</th>
            <th>Taxa (%)</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Mes</td>
                <td>@item.Ano</td>
                <td>@item.Taxa</td>
                <td>@item.Descricao</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>