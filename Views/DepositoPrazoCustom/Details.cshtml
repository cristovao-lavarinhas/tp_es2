@model esii.Models.DepositoPrazoCreateViewModel
@{
    ViewData["Title"] = "Detalhes do Depósito";
}

<style>
    body {
        background: linear-gradient(to right, #e3f2fd, #bbdefb);
        font-family: 'Segoe UI', sans-serif;
    }

    .details-container {
        background-color: #fff;
        padding: 2rem 3rem;
        border-radius: 16px;
        max-width: 800px;
        margin: 3rem auto;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .details-title {
        color: #0d47a1;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-align: left;
    }

    dl dt {
        font-weight: 600;
        color: #333;
        font-size: 1.1rem;
        margin-top: 0.5rem;
    }

    dl dd {
        font-size: 1.1rem;
        margin-bottom: 0.8rem;
        color: #444;
    }

    .details-actions {
        margin-top: 2rem;
        display: flex;
        justify-content: flex-start;
        gap: 1rem;
    }

    .btn {
        padding: 0.5rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
    }
</style>

<div class="details-container">
    <h2 class="details-title">@ViewData["Title"]</h2>
    <dl class="row">
        <dt class="col-sm-4">Banco</dt>
        <dd class="col-sm-8">@Model.Banco</dd>
        <dt class="col-sm-4">Número de Conta</dt>
        <dd class="col-sm-8">@Model.NumConta</dd>
        <dt class="col-sm-4">Titulares</dt>
        <dd class="col-sm-8">@Model.Titulares</dd>
        <dt class="col-sm-4">Valor</dt>
        <dd class="col-sm-8">@Model.Valor.ToString("C")</dd>
        <dt class="col-sm-4">Taxa de Juro Anual</dt>
        <dd class="col-sm-8">@Model.TaxaJurosAnual.ToString("P")</dd>
    </dl>
    <div class="btn-group d-flex justify-content-center gap-3 mt-4">
        <a class="btn btn-warning" href="@Url.Action("Edit", new { id = Model.AtivoId })">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a class="btn btn-secondary" href="@Url.Action("Index")">
            <i class="bi bi-arrow-left-circle"></i> Voltar
        </a>
    </div>
</div>